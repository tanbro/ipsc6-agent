{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "mkdocs",
                "build"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build pdf",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "mkdocs",
                "build"
            ],
            "options": {
                "env": {
                    "ENABLE_PDF_EXPORT": "1"
                }
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "serve",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "mkdocs",
                "serve",
                "-a",
                "localhost:8080"
            ],
            "problemMatcher": []
        }
    ]
}