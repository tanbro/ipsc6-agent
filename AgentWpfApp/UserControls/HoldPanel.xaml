<UserControl x:Class="AgentWpfApp.UserControls.HoldPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgentWpfApp.UserControls"
             mc:Ignorable="d"
             Width="48" Height="64"
             >

    <Border Width="48" Height="64"
            BorderThickness="1" CornerRadius="5" BorderBrush="{StaticResource MyBorderBrush}"
            HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Border Grid.Row="0"
                CornerRadius="5 5 0 0"
                Background="{StaticResource MyGroupTitleBackground}" 
            >
                <TextBlock FontSize="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                    保持
                </TextBlock>
            </Border>
            <Border Grid.Row="1"
                Background="{StaticResource MyBackgroud}"
                CornerRadius="0 0 5 5"
            >
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontFamily="/Fonts/#LCD 14" FontSize="20"
                           Foreground="{StaticResource MyInfoTextForeground}">
                    2
                </TextBlock>
            </Border>
        </Grid>
    </Border>
</UserControl>
