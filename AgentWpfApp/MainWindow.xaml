<Window x:Class="AgentWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgentWpfApp"
        xmlns:uc="clr-namespace:AgentWpfApp.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="140" Width="1280"
        Background="{StaticResource MyBackgroud}"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <uc:InfoPannel Grid.Column="0" Margin="4 0 0 4"/>
        <uc:DialPannel Grid.Column="1" Margin="4 0 0 4"/>
        <uc:QueuePannel Grid.Column="2" Margin="4 0 0 4"/>
        <uc:MainToolBar Grid.Column="3" Margin="4 0 0 4"/>
        <uc:HoldPannel Grid.Column="4" Margin="4 0 0 4"/>
    </Grid>
</Window>
