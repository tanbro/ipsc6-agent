<?xml version="1.0" encoding="utf-8"?>
<log4net>
  <root>
    <level value="OFF"/>
  </root>
  <logger name="hesong.Info">
    <level value="INFO"/>
    <appender-ref ref="hesong.Appender"/>
  </logger>
  <logger name="hesong.Debug">
    <level value="DEBUG"/>
    <appender-ref ref="hesong.Appender"/>
  </logger>
  <logger name="hesong.Warn">
    <level value="WARN"/>
    <appender-ref ref="hesong.Appender"/>
  </logger>
  <logger name="hesong.Error">
    <level value="ERROR"/>
    <appender-ref ref="hesong.Appender"/>
  </logger>
  <logger name="hesong.Fatal">
    <level value="FATAL"/>
    <appender-ref ref="hesong.Appender"/>
  </logger>
  <appender name="hesong.Appender" type="log4net.Appender.RollingFileAppender,log4net" >
    <param name="File" value="log/" />
    <param name="AppendToFile" value="true" />
    <param name="RollingStyle" value="Date" />
    <param name="DatePattern" value="yyyyMMdd&quot;_hesong.log&quot;" />
    <param name="StaticLogFileName" value="false" />
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%date %-5level - 消息：%message%newline" />
    </layout>
  </appender>
</log4net>